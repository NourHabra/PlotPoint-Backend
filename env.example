# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/plotpoint-db

# Security Configuration
# CRITICAL: Generate a strong random string for JWT_SECRET
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MINIMUM_32_CHARACTERS

# CORS Configuration
# Comma-separated list of allowed origins (frontend URLs)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# LibreOffice Path (if not in system PATH)
# LIBREOFFICE_PATH=/usr/bin/soffice

# Rate Limiting (optional - override defaults)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100